{
  "name": "@techrivers/atlassianjira-mcp-integration",
  "version": "1.0.0",
  "description": "Production-ready MCP server for Jira integration with dynamic configuration, time logging, task creation, and bulk imports",
  "main": "build/index.js",
  "type": "commonjs",
  "bin": {
    "atlassianjira-mcp-integration": "build/index.js",
    "jira-activitytimeline-server": "build/index.js"
  },
  "files": [
    "build/",
    "scripts/",
    "README.md",
    "LICENSE",
    "package.json",
    "tsconfig.json",
    ".env.example"
  ],
  "keywords": [
    "mcp",
    "jira",
    "time-logging",
    "task-management",
    "bulk-import",
    "model-context-protocol",
    "atlassian",
    "project-management",
    "dynamic-configuration",
    "remote-server"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techrivers/AtlassianJira-MCP-Integration.git"
  },
  "bugs": {
    "url": "https://github.com/techrivers/AtlassianJira-MCP-Integration/issues"
  },
  "homepage": "https://github.com/techrivers/AtlassianJira-MCP-Integration#readme",
  "author": "Uzair Fayyaz <uzairfayyaz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node build/index.js",
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "setup": "node scripts/setup.js --setup",
    "configure": "node build/index.js --configure",
    "postinstall": "echo 'Installation complete'",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@types/express": "^5.0.3",
    "axios": "^1.10.0",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "xlsx": "^0.18.5",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "typescript": "^5.8.3"
  }
}
